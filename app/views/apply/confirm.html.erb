<!--links menu-->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Apply New", apply_path %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      Apply Confirm
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Apply Finish", "#" %>
    </li>
  </ol>
</nav>
<%= form_for(@apply, url: done_path(@job)) do |f|%>
  <div class= "field">
    <%= f.label :username %>
    </br>
    <%= @apply.username %>
    <%= f.hidden_field :username, value: @apply.username %>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    </br>
    <%= @apply.first_name %>
    <%= f.hidden_field :first_name, value: @apply.first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    </br>
    <%= @apply.last_name %>
    <%= f.hidden_field :last_name, value: @apply.last_name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    </br>
    <%= @apply.email %>
    <%= f.hidden_field :email, value: @apply.email %>
  </div>

  <div class="field">
    <%= f.label :CV_URL %>
    </br>
    <%= @apply.cv_url %>
    <%= f.hidden_field :cv_url, value: @apply.cv_url %>
  </div>
  </br>

  <div class = "actions">
    <%= f.submit "Done", class: "btn btn-primary" %>
  </div>
<% end %>
      <div class = "float-right">
        <%= link_to "Done", done_path(@job), class: "btn btn-primary" %>
      </div>

      <div class= "float-left">
        <%= link_to "Edit", apply_path, class: "btn btn-primary" %>
      </div>
  </div>
</div>
